<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<com.dd.ShadowLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    shadow:sl_cornerRadius="10dp"
    shadow:sl_dx="2dp"
    shadow:sl_dy="2dp"
    shadow:sl_shadowColor="#11e1e2e4">





    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ContentDescription"
        android:background="@drawable/rounded_corner_5dp"
        android:layout_marginLeft="7dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/background"
            android:layout_width="53.3dp"
            android:layout_height="53.3dp"
            android:layout_gravity="center"
            android:layout_margin="12.5dp"
            android:src="@drawable/remmss" />

        <id.boxee.pay.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Denny"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textSize="13.5sp"
            android:textColor="#4f4f4f"/>



    </LinearLayout>

</com.dd.ShadowLayout>


</LinearLayout>