<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15.5dp"
    android:orientation="horizontal">




    <ImageView
        android:id="@+id/img"
        android:layout_width="30.7dp"
        android:layout_height="30.7dp"
        android:layout_gravity="center" />



    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.3dp"
        android:orientation="vertical">


        <id.boxee.pay.customfonts.MyTextView_Opensans_SemiBold
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.3sp"
            android:textColor="#4f4f4f"
            android:gravity="center_horizontal"
            android:text="Ms. Jackson"
            />

        <id.boxee.pay.customfonts.MyTextView_OpenSans_Regular
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.7sp"
            android:textColor="#8b8b8b"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal"
            android:text="Sep 27, 2019"
            />



    </LinearLayout>

    <id.boxee.pay.customfonts.MyTextView_Opensans_SemiBold
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13.3sp"
        android:layout_gravity="center"
        android:textColor="#4f4f4f"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="- Rp 8.500.000"
        />
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="57.6dp"
        android:layout_marginRight="9dp"
        android:background="#f1f1f1"/>
</LinearLayout>