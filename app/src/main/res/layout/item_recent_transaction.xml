<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/tran_profile"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/remmss"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <id.boxee.pay.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/tran_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="#4f4f4f"
                android:gravity="center_horizontal"
                android:text="Denny Aprilio"
                />

            <id.boxee.pay.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tran_subname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.7sp"
                android:textColor="#8b8b8b"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:text="Dinner"
                />





        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18.3dp"
            android:orientation="vertical">

            <id.boxee.pay.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/tran_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="#4f4f4f"
                android:gravity="center_horizontal"
                android:text="+ Rp 1.800.000"
                />

            <id.boxee.pay.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tran_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.7sp"
                android:textColor="#8b8b8b"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:text="Sep 27"
                />





        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="57.3dp"
        android:layout_marginRight="17.3dp"
        android:background="#f1f1f1"/>

</LinearLayout>